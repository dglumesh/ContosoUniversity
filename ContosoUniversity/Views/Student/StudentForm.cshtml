@model ContosoUniversity.Models.Student
@{
                /**/

                ViewBag.Title = "StudentForm";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>StudentForm</h2>
@using (Html.BeginForm("Save", "Student"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.LastName)
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.FirstMidName)
        @Html.TextBoxFor(m => m.FirstMidName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.EnrollmentDate)
        @Html.TextBoxFor(m => m.EnrollmentDate, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Create New</button>
}
<hr/>
<a href='@Url.Action("Index")'>Back To Students</a>